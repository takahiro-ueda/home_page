<!-- コメント入力フォーム ------------------------------------------------------------>
<% if current_user %>
  <%= form_with(model: [@post, @comment], local: true, class: "comment__create__text__new", id: "new_comment") do |f| %>
    <%= f.text_area :content, placeholder: "コメントする", rows: "2", class: "comment__create__text__new__box" %>
    <%= f.submit "送信", class: "comment__create__text__new__submit" %>
  <% end %>
<% else %>
  <strong><p>※※※ コメントの投稿には新規登録/ログインが必要です ※※※</p></strong>
<% end %>
