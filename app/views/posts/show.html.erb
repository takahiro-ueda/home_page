<%= render partial: 'header' %>
<div class="blog__contents">
  <div class="postTitle">
    <%= @post.title %>
  </div>
  <div class="postDate">
    <%= @post.created_at %>
  </div>
  <div class="postAuthor">
  </div>
  <% if user_signed_in? && current_user.id == @post.user_id %>
    <div class="postManage">
      <%= link_to "編集", edit_post_path(@post.id), class: "postManage__edit" %>
      <%= link_to "削除", post_path(@post.id), method: :delete, data: { confirm: '本当に削除しますか?' }, class: "postManage__delete" %>
      <%= link_to '戻る', posts_path(@post.id), class: "postManage__back" %>
    </div>
  <% end %>
  <div class="postText">
    <%= @post.content %>
  </div>
</div>
<div class="comment">
  <p class="comment__heaader">コメント一覧</p>
  <% @comments.each do |c| %>
    <div class="comment__field">
      
      <%= c.content %>
    </div><br />
  <% end %>
  <% if user_signed_in? %>
    <%= form_with(model: [@post, @comment], local: true) do |f| %>
      <%= f.text_area :content, class: "form-control", rows: 5 %>
      <%= button_tag type: "submit", class: "btn btn-success float-right mt-1" do %>
        <i class="fa fa-comments"></i> コメントする
      <% end %>
    <% end %>
  <% end %>
</div>