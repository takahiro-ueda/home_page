<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <tr>
        <td colspan="4"><%= post.content %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>

<header class="blog__header">
  <div class="blog__header__title">
    <%= link_to "Je mets au défi la vie.", "/", class: "blog__header__title__text" %>
  </div>
  <div class="blog__header__right">
    <%= link_to "新規投稿", new_post_path, class: "blog__header__right__btn" %>
  </div>
</header>
<div class="blog__contents">
  <% @posts.each do |post| %>
    <div class="blog__content">
      <div class="blog__content__left">
        <div class="blog__content__left__image"></div>
      </div>
      <div class="blog__content__right">
        <div class="blog__content__right__top">
          <%= link_to post.title, post_path(post.id), class: "blog__content__right__top__title" %>
        </div>
        <div class="blog__content__right__bottom">
          <div class="blog__content__right__bottom__date">
            <%= post.created_at %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>