<%= form_with(url: root_path, local: true, method: :get, class: "search-form") do |form| %>
  <%= form.text_field :keyword, placeholder: "カテゴリを選んでください", class: "search-input" %>
  <%= form.submit "検索", class: "search-btn" %>
<% end %>
<div class="contents row">
  <% @posts.each do |post| %>
    <%= render partial: "posts/post", locals: { post: post } %>
  <% end %>
</div>
<div class="content__main__left__header">
  <h2>新着投稿</h2>
  <%= form_tag(root_path, method: :get) do %>
    <%= collection_select :category_id,'', Category.all, :id, :name, { prompt: "カテゴリを選んでください" } %>
    <%= submit_tag '検索', name: nil %>
    <%= hidden_field_tag :search, true %>
  <% end %>
  <% @posts.each do |post| %>
    <%= render partial: "posts/post", locals: { post: post } %>
  <% end %>
</div>