<% if user_signed_in? %>
  <% if post.like_user(current_user.id) %>
    <%= button_to post_like_path(current_user, post, like), method: "DELETE", id: "like-button", remote: true do %>
      お気に入り<i class="fa fa-heart like-btn" ></i>
      <span>
        <%= post.likes_count %>
      </span>
    <% end %>
  <% else %>
    <%= button_to post_likes_path(current_user, post), method: "POST", id: "like-button", remote: true do %>
      お気に入り<i class="fa fa-heart unlike-btn"></i>
      <span>
        <%= @likes_count %>
      </span>
    <% end %>
  <% end %>
<% else %>
  お気に入り<i class="fa fa-heart unlike-btn"></i>
  <span>
    <%= post.likes_count %>
  </span>
<% end %>