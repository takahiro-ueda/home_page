<%= render partial: 'posts/nolist-header' %>
<% breadcrumb :nickname_blog %>
<%= breadcrumbs separator: " &rsaquo; " %>
<div class="blog__contents">
  <div class="blog__contents__seach">
    <div class="blog__contents__seach__postTitle">
      <%= @user.nickname %>さんの投稿一覧
    </div>
    <%= form_with(url: search_posts_path, local: true, method: :get, class: "blog__contents__seach__form") do |form| %>
      <%= form.text_field :keyword, placeholder: "カテゴリを選んでください", class: "blog__contents__seach__form__input" %>
      <%= form.submit "検索", class: "blog__contents__seach__form__btn" %>
      <%= hidden_field_tag :search, true %>
    <% end %>
  </div>
  <% @posts.each do |post| %>
    <%= render partial: "posts/post", locals: { post: post } %>
  <% end %>
  <%= paginate(@posts) %>
</div>