<div class="postTitle">
  <%= @user.nickname %>さんの投稿一覧
</div>
<% @posts.each do |post| %>
  <div class="blog__content">
    <div class="blog__content__left">
      <div class="blog__content__left--image"></div>
    </div>
    <div class="blog__content__right">
      <div class="blog__content__right__top">
        <%= link_to post.title, post_path(post.id), class: "blog__content__right__top--title" %>
      </div>
      <div class="blog__content__right__bottom">
        <div class="blog__content__right__bottom--userName">
          <%= link_to post.user.nickname, user_path(post.user), class: "blog__content__right__bottom--userName--btn" %>
        </div>
        <div class="blog__content__right__bottom--date">
          <%= post.created_at %>
        </div>
      </div>
    </div>
  </div>
<% end %>